<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locadora - @ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Login", "Index", "Login", new { area = "" }, new { @class = "navbar-brand lista-jogos" })
                @Html.ActionLink("Lista de jogos", "JogosDisponiveis", "Relatorio", new { area = "" }, new { @class = "navbar-brand lista-jogos" })
                @Html.ActionLink("Devolução de jogos", "Index", "Devolucao", new { area = "" }, new { @class = "navbar-brand lista-jogos" })
                <style> 
                .lista-jogos{
                    margin-top: 2px;
                    font-size: 16px;
                }

                .pesquisa{     
                    float: right;
                    margin-top: 11px;
                    display: inline-block;
                    margin-right: -140%
                }
                .pesquisa :first-child{
                    border-radius: 3px;
                    padding: 2px; 
                }
                .pesquisa :last-child{
                    margin-bottom: 3px;
                    padding: 3.2px 10px;
                }
                </style>
                <form class="pesquisa" action="~/Relatorio/JogosDisponiveis">
                    <input class="barra_pesquisa"type="text" name="busca" placeholder="Digite o nome de um jogo">
                    <input class="btn btn-default btn-md" type="submit" value="Pesquisar">
                </form>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CWI Crescer</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>